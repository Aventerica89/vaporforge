---
---

<section class="relative flex min-h-[calc(100vh-64px)] items-center justify-center px-4 py-16 cyber-grid cyber-scan">
  <!-- Background glow -->
  <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 h-[300px] w-[300px] rounded-full bg-vapor-purple/8 blur-[120px] pointer-events-none" />

  <div class="relative z-10 w-full max-w-sm rounded-2xl p-px"
    style="background: linear-gradient(135deg, rgba(233,69,245,0.3), rgba(29,211,230,0.2), rgba(47,75,192,0.3))">
    <div class="rounded-2xl bg-vapor-card p-8">
      <div class="text-center">
        <!-- Cyberpunk logo -->
        <div class="mx-auto flex h-14 w-14 items-center justify-center">
          <svg width="48" height="48" viewBox="0 0 512 512" fill="none"
            class="drop-shadow-[0_0_12px_rgba(233,69,245,0.4)]">
            <rect width="512" height="512" rx="128" fill="#0f1419" stroke="url(#loginGrad)" stroke-width="4"/>
            <g opacity="0.15">
              <path d="M100 100 H200 V200 H300 V300 H400" stroke="#E945F5" stroke-width="3"/>
              <circle cx="200" cy="200" r="5" fill="#E945F5"/>
              <circle cx="300" cy="300" r="5" fill="#1dd3e6"/>
            </g>
            <g filter="url(#loginGlow)">
              <path d="M 222 230 L 162 296 L 222 362" stroke="#1dd3e6" stroke-width="20" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
              <path d="M 290 230 L 350 296 L 290 362" stroke="#E945F5" stroke-width="20" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
            </g>
            <defs>
              <linearGradient id="loginGrad" x1="0" y1="0" x2="512" y2="512">
                <stop offset="0%" stop-color="#E945F5" stop-opacity="0.5"/>
                <stop offset="100%" stop-color="#1dd3e6" stop-opacity="0.5"/>
              </linearGradient>
              <filter id="loginGlow">
                <feGaussianBlur stdDeviation="8" result="coloredBlur"/>
                <feMerge>
                  <feMergeNode in="coloredBlur"/>
                  <feMergeNode in="SourceGraphic"/>
                </feMerge>
              </filter>
            </defs>
          </svg>
        </div>
        <h1 class="mt-4 font-display text-xl font-bold tracking-wide text-white">Sign in to VaporForge</h1>
        <p class="mt-1 text-sm text-vapor-muted">Access your cloud IDE</p>
      </div>

      <form class="mt-8 space-y-4" action="/app" method="get">
        <div>
          <label for="email" class="block text-xs font-medium text-vapor-muted">Email</label>
          <input
            type="email"
            id="email"
            placeholder="you@example.com"
            class="mt-1 w-full rounded-lg border border-vapor-purple-bg/50 bg-vapor-bg px-3 py-2.5 text-sm text-white placeholder-vapor-muted/50 outline-none focus:border-vapor-purple/50 focus:shadow-[0_0_8px_rgba(233,69,245,0.15)]"
          />
        </div>
        <div>
          <label for="password" class="block text-xs font-medium text-vapor-muted">Password</label>
          <input
            type="password"
            id="password"
            placeholder="Enter your password"
            class="mt-1 w-full rounded-lg border border-vapor-purple-bg/50 bg-vapor-bg px-3 py-2.5 text-sm text-white placeholder-vapor-muted/50 outline-none focus:border-vapor-purple/50 focus:shadow-[0_0_8px_rgba(233,69,245,0.15)]"
          />
        </div>
        <a
          href="/app"
          class="block w-full cyber-btn rounded-lg py-2.5 text-center text-sm font-semibold text-white transition-all hover:shadow-lg hover:shadow-vapor-purple/20"
        >
          Sign In
        </a>
      </form>

      <div class="my-6 flex items-center gap-3">
        <div class="h-px flex-1 bg-vapor-purple-bg/50" />
        <span class="text-xs text-vapor-muted">or</span>
        <div class="h-px flex-1 bg-vapor-purple-bg/50" />
      </div>

      <div class="space-y-3">
        <button
          disabled
          title="Coming Soon"
          class="flex w-full cursor-not-allowed items-center justify-center gap-2 rounded-lg border border-vapor-purple-bg/50 py-2.5 text-sm text-vapor-muted opacity-50"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"
            fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
          </svg>
          Continue with GitHub
        </button>
        <button
          disabled
          title="Coming Soon"
          class="flex w-full cursor-not-allowed items-center justify-center gap-2 rounded-lg border border-vapor-purple-bg/50 py-2.5 text-sm text-vapor-muted opacity-50"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"
            fill="currentColor">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" />
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
          </svg>
          Continue with Google
        </button>
      </div>

      <p class="mt-6 text-center text-xs text-vapor-muted">
        <a href="/app" class="text-vapor-purple hover:text-vapor-scan hover:underline transition-colors">
          Use setup token instead
        </a>
      </p>
    </div>
  </div>
</section>
