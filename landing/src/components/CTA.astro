<section class="relative px-4 py-20 sm:px-6 cyber-lines">
  <div class="mx-auto max-w-4xl overflow-hidden rounded-2xl p-px"
    style="background: linear-gradient(135deg, rgba(233,69,245,0.4), rgba(29,211,230,0.4), rgba(47,75,192,0.4))">
    <div class="rounded-2xl bg-vapor-bg px-6 py-16 text-center sm:px-12 cyber-grid relative overflow-hidden">
      <!-- Inner glow -->
      <div class="absolute inset-0 bg-gradient-to-br from-vapor-purple/5 via-transparent to-vapor-accent/5 pointer-events-none" />

      <div class="relative z-10">
        <h2 class="font-display text-3xl font-bold tracking-wide sm:text-4xl cyber-glow">
          Ready to code from anywhere?
        </h2>
        <p class="mx-auto mt-4 max-w-lg text-vapor-muted">
          Stop being tied to your workstation. Open your browser, connect your Claude subscription, and start building.
        </p>
        <a
          href="/app"
          class="mt-8 inline-flex items-center gap-2 cyber-btn rounded-lg px-8 py-3.5 text-base font-semibold text-white transition-all hover:shadow-lg hover:shadow-vapor-purple/25"
        >
          Launch VaporForge
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
            fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12" />
            <polyline points="12 5 19 12 12 19" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
