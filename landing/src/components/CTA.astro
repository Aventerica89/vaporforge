<section class="relative px-4 py-24 sm:px-6 sm:py-32 cyber-lines">
  <div class="mx-auto max-w-4xl overflow-hidden rounded-2xl p-px"
    style="background: linear-gradient(135deg, rgba(233,69,245,0.4), rgba(29,211,230,0.4), rgba(47,75,192,0.4))">
    <div class="rounded-2xl bg-vapor-bg px-6 py-20 text-center sm:px-12 cyber-grid relative overflow-hidden">
      <!-- Inner glow -->
      <div class="absolute inset-0 bg-gradient-to-br from-vapor-purple/5 via-transparent to-vapor-accent/5 pointer-events-none" />

      <div class="relative z-10">
        <h2 class="font-display text-3xl font-bold tracking-wide sm:text-4xl lg:text-5xl cyber-glow leading-tight">
          Stop being tied to<br class="hidden sm:block" /> your workstation
        </h2>
        <p class="mx-auto mt-6 max-w-lg text-vapor-muted leading-relaxed">
          Open your browser. Connect your Claude subscription.
          Start building from your phone, your couch, or 30,000 feet up.
        </p>
        <div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
          <a
            href="/app"
            class="inline-flex items-center gap-2 cyber-btn rounded-lg px-8 py-4 text-base font-semibold text-white transition-all hover:shadow-lg hover:shadow-vapor-purple/25"
          >
            Launch VaporForge
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
              fill="none" stroke="currentColor" stroke-width="2"
              stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12" />
              <polyline points="12 5 19 12 12 19" />
            </svg>
          </a>
          <a
            href="/pricing"
            class="text-sm text-vapor-muted hover:text-vapor-accent transition-colors"
          >
            View pricing &rarr;
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
