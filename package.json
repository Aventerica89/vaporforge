{
  "name": "vaporforge",
  "version": "0.1.0",
  "description": "Web-based AI coding IDE on Cloudflare Sandboxes",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:ui": "cd ui && npm run dev",
    "build": "npm run build:ui && wrangler deploy --dry-run",
    "build:ui": "cd ui && npm run build",
    "deploy": "npm run build:ui && wrangler deploy",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "cf-typegen": "wrangler types"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^0.2.0",
    "@anthropic-ai/sdk": "^0.32.0",
    "hono": "^4.6.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0",
    "wrangler": "^3.99.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
